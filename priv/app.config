[

%%
%% Example of application configuration
{permit, [
   
   %%
   %% RFC 7519  
   %%   4.1.1.  "iss" (Issuer) Claim
   {issuer, {env, "PERMIT_ISSUER", "permit"}}

   %%
   %% RFC 7519
   %%   4.1.3.  "aud" (Audience) Claim
  ,{audience, {env, "PERMIT_AUDIENCE", "permit"}}

   %%
   %% public/secret key to sign/verify the token
   %% supported schema(s)
   %%   * data:...
   %%   * file:///jwks.json
   %%   * http://localhost:8080/oauth2/jwks
   %%   * s3://bucket/jwks.json
   %%   * openssl+public:///tmp openssl+secret:///tmp 
  ,{public, {env, "PERMIT_PUBLIC", "openssl+public:///tmp"}}
  ,{secret, {env, "PERMIT_PUBLIC", "openssl+secret:///tmp"}}


   %%
   %% timer to reload config (keys)
  ,{reload, 60000}

   %%
   %% default list of claims
  ,{claims, {env, "PERMIT_CLAIMS", "uid=true"}}
]}

].